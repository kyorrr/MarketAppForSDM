<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rootCabinetNew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg_white"
        android:backgroundTint="@color/white"
        tools:context=".CabinetFragmentNew">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="419dp"
            android:layout_height="123dp"
            android:src="@drawable/logo_big"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.666"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/todo" />

        <LinearLayout
            android:id="@+id/zakaziLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/orange"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2">

            <TextView
                android:id="@+id/zakazi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_bold"
                android:text="@string/orders"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="24sp"
                tools:ignore="TextContrastCheck" />
        </LinearLayout>

        <Button
            android:id="@+id/myZakazi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="3dp"
            android:drawableLeft="@drawable/zakazi"
            android:drawableTint="@color/white"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="left"
            android:text="@string/myOrders"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:iconPadding="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/zakaziLayout"
            tools:ignore="RtlHardcoded,VisualLintButtonSize" />

        <Button
            android:id="@+id/historyOfZakazi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:drawableLeft="@drawable/historyoforders"
            android:drawableTint="@color/white"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="left"
            android:text="@string/historyOfOrders"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:iconPadding="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/myZakazi"
            tools:ignore="RtlHardcoded,VisualLintButtonSize" />

        <Button
            android:id="@+id/statusZakaza"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:drawableLeft="@drawable/statusoforders"
            android:drawableTint="@color/white"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="left"
            android:text="@string/checkOrderStatus"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:iconPadding="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/historyOfZakazi"
            tools:ignore="RtlHardcoded,VisualLintButtonSize" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:background="@color/orange"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/statusZakaza">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_bold"
                android:text="@string/helpCenter"
                android:textColor="@color/white"
                android:textSize="24sp"
                tools:ignore="TextContrastCheck" />

        </LinearLayout>

        <Button
            android:id="@+id/settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="3dp"
            android:drawableLeft="@drawable/settings"
            android:drawableTint="@color/white"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="left"
            android:text="@string/settings"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:iconPadding="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
            tools:ignore="RtlHardcoded,VisualLintButtonSize" />

        <Button
            android:id="@+id/whattoupd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:drawableLeft="@drawable/whattoupd"
            android:drawableTint="@color/white"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="left"
            android:text="@string/whatToUpd"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:iconPadding="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/settings"
            tools:ignore="RtlHardcoded,VisualLintButtonSize" />

        <Button
            android:id="@+id/information"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:drawableLeft="@drawable/contacts"
            android:drawableTint="@color/white"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="left"
            android:text="@string/information"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:iconPadding="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/whattoupd"
            tools:ignore="RtlHardcoded,VisualLintButtonSize" />

        <Button
            android:id="@+id/leaveFromAcc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:drawableLeft="@drawable/leave"
            android:drawableTint="@color/white"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="left"
            android:text="@string/leaveFromAcc"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:iconPadding="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/information"
            tools:ignore="RtlHardcoded,VisualLintButtonSize" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:text="@string/version"
            android:textColor="#DD2C00"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/leaveFromAcc" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>